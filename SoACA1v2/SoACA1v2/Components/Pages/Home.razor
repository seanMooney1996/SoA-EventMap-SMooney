@page "/"
@using SoACA1v2.Components.Layout
@rendermode InteractiveServer
@inject SearchStateController Controller
@inject EventController  EventController

<PageTitle>Home</PageTitle>

<div class="main-dashboard">
    <div class="left-column">
        <div class="search-area">
            <TicketMasterSearch />
        </div>
        <div class="map-area">
            <GoogleMapLayout />
        </div>
    </div>

    <div class="right-column">
        <EventsLayout />
    </div>
</div>

<style>
    html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
        scrollbar-gutter: stable both-edges;
    }

    .main-dashboard {
        display: flex;
        flex-direction: row;
        height: 100vh;
        width: 97vw;
        box-sizing: border-box;
        margin-right: calc(-1 * (100vw - 100%));
        overflow-x: hidden;
        overflow-y: visible;

        gap: 0.5rem;
        padding: 0.5rem;
        align-items: stretch;
        justify-content: space-between;
    }

    .left-column {
        display: flex;
        flex-direction: column;
        flex: 0 0 69%;
        height: 95%;
        overflow: visible;
        padding: 0.5rem;
        justify-content: space-between;
    }

    .search-area {
        flex: 20%;
        max-height: 21%;
        overflow: visible;
        box-sizing: border-box;
        z-index:1;
    }

    .map-area {
        flex: 1 1 80%;
        max-height: 77%;
        overflow: hidden;
        border-radius: 8px;
        display: flex;
        z-index:0;
    }

    .map-area google-map,
    .map-area {
        height: 100%;
        width: 100%;
    }

    .right-column {
        display: flex;
        height: 95%;
        width: 30%;
        overflow-y: auto;
        overflow-x: hidden;
        box-sizing: border-box;
        padding:0.5rem;
    }

    .right-column::-webkit-scrollbar {
        width: 10px;
    }

    .right-column::-webkit-scrollbar-thumb {
        background-color: #ccc;
        border-radius: 4px;
    }
    
</style>