@page "/"
@using SoACA1v2.Components.Layout
@rendermode InteractiveServer
@inject SearchStateController Controller
@inject EventController  EventController


<PageTitle>Event Finder</PageTitle>
<NavBar/>
<div class="container">
    <div class="main-dashboard">
        <div class="left-column">
            <div class="search-area">
                <TicketMasterSearch/>
            </div>
            <div class="map-area">
                <GoogleMapLayout/>
            </div>
        </div>

        <div class="right-column">
            <EventsLayout/>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url("v960-ning-32.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
    h2 {
        text-align: center;
        padding-top: 4px;
        padding-bottom: 4px;
    }
.container{
    display: flex;
    justify-content: center;
    width: 100vw;
    height: 90%;
    overflow: hidden;
    padding: 0 !important;
    background-color: transparent;
    align-items: flex-start;
}
    .main-dashboard {
        padding-top: 25px;
        display: flex;
        flex-direction: row;
        width: 100vw;
        height: 95%;
        box-sizing: border-box;
    }

    .left-column {
        display: flex;
        flex-direction: column;
        flex:58%;
        height: 95%;
        overflow: visible;
        justify-content: space-between;
        max-width:60%;
        margin-right:20px;
    }

    .search-area {
        height: 25%;
        overflow: visible;
        box-sizing: border-box;
        z-index:1;
    }

    .map-area {
        flex: 1 1 73%;
        max-height: 73%;
        overflow: hidden;
        border-radius: 8px;
        display: flex;
        z-index:0;
    }

    .map-area google-map,
    .map-area {
        height: 100%;
        width: 100%;
    }

    .right-column {
        display: flex;
        height: 95%;
        width: 38%;
        overflow-y: auto;
        overflow-x: hidden;
        box-sizing: border-box;
    }

    .right-column::-webkit-scrollbar {
        width: 10px;
    }

    .right-column::-webkit-scrollbar-thumb {
        background-color: #ccc;
        border-radius: 4px;
    }
    
</style>